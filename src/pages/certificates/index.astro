---
import CourseList from '@/components/CourseList.astro'
import Highlight from '@/components/Highlight.astro'
import { getAllCertificates } from '@/utils/content'
import PageLayout from '@/layouts/PageLayout.astro'

const allCerts = await getAllCertificates()
---

<PageLayout title="Label">
  <div class="max-w-[800px] mx-auto px-4 py-16">
    <header class="space-y-4 mb-8">
      <h1 class="text-4xl font-bold">
        <Highlight>Certificates</Highlight>
      </h1>
      <p>There are {allCerts.length} total certificates.</p>
    </header>

    <CourseList certificates={allCerts} />
  </div>
</PageLayout>
